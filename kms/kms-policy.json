{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EnableIAMUserPermissions",
            "Effect": "Allow",
            "Action": [
                "kms:Create*",
                "kms:Describe*",
                "kms:Enable*",
                "kms:List*",
                "kms:Put*",
                "kms:Update*",
                "kms:Revoke*",
                "kms:Disable*",
                "kms:Get*",
                "kms:Delete*",
                "kms:ScheduleKeyDeletion",
                "kms:CancelKeyDeletion",
                "kms:EnableKeyRotation",
                "kms:TagResource"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ReadOnlyAccessForAllKMSKeysInAccount",
            "Effect": "Allow",
            "Action": [
                "kms:GetPublicKey",
                "kms:GetKeyRotationStatus",
                "kms:GetKeyPolicy",
                "kms:DescribeKey",
                "kms:ListKeyPolicies",
                "kms:ListResourceTags",
                "tag:GetResources"
            ],
            "Resource": "*"
        }
    ]
}