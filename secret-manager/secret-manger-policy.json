{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SecretManagerAccessKMS",
            "Effect": "Allow",
            "Action": [
                      "kms:GenerateDataKeyPairWithoutPlaintext",
                      "secretsmanager:DescribeSecret",
                      "secretsmanager:CreateSecret",
                      "kms:GenerateDataKey",
                      "kms:Decrypt"
            ],
            "Resource": "*"
        }
    ]
}